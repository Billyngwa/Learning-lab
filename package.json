{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "firebase": "^12.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.11"
  },
  "scripts": {
    "start": "http-server -c-1 -p 8080 ./",
    "build:css": "npx sass styles/index.scss styles/index.css && npx postcss styles/index.css -o styles/index.css",
    "watch:sass": "npx sass --watch styles/index.scss:styles/index.css",
    "build:tailwind": "npx tailwindcss -i styles/index.css -o styles/index.processed.css",
    "dev": "npm run build:css && npm run build:tailwind"
  }
}
